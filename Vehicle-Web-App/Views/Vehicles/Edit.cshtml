
@model Vehicle_Web_App.ViewModel.VehicleViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Save", "Vehicles"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
<div class="form-group">
   
    @Html.LabelFor(m => m.Vehicle.Make)
    @Html.TextBoxFor(m => m.Vehicle.Make, new { @class = "form-control" })
    @Html.LabelFor(m => m.Vehicle.Model)
    @Html.TextBoxFor(m => m.Vehicle.Model, new { @class = "form-control" })
    @Html.LabelFor(m => m.Vehicle.Year)
    @Html.TextBoxFor(m => m.Vehicle.Year, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Vehicle.Year)

</div>

    @Html.HiddenFor(m => m.Vehicle.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}







